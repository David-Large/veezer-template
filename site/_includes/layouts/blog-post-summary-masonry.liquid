{%- if blog.data.blog_feature_image %}{% assign current_image = blog.data.blog_feature_image %}{% else %}{% assign current_image = site.placeholder_image %}{% endif %}

<div class="masonry-item use-gsap">
                        
    <div class="content gsap-element-wrapper print-full-width" data-gsap-animation-name="slide-down-from-top" data-gsap-delay="0.4">
      
        <div class="card">
          
            <div class="card-image">  
              
                <a href="{{ blog.url }}">
                    {% bookshop_include "resize-image-srcset" live_render: false rs_lazy: true rs_image: current_image rs_quality: "70" rs_title: blog.data.title rs_multi_column_max_image_width: "50vw" rs_aspect_ratio: "auto" %}
                </a>
                
            </div>
            
            <div class="card-content">
          
                <h3 class="blog-post-title">
                    {{ blog.data.title }}
                </h3>
               
                <p style="font-size: 0.9rem;"><em>Posted: {{ blog.date | datePost }}</em></p>
                
                {%- if site.blog.show_tags == true %} 
                <div class="blog-post-tags">
                    {%- for tag in blog.data.tags limit: 6 %}
                        {% if tag != "blog" %}<a href="/tags/{{ tag }}/"> {{ tag | replace: "-"," " | capitalize }} </a>{% endif %}
                    {%- endfor %}
                </div>
                {%- endif %}

                <div class="blog-post-excerpt">
                    <p>{{ blog.data.excerpt | truncatewords: 40 }}</p>
                    <p><a href="{{ blog.url }}" class="button">Read More</a></p>
                </div>
           
            </div>
        
        </div>
           
    </div>
    
</div>