          {{ content }}
          <div class="footer-spacer"></div>
        </main>
        {% include './layouts/footer.liquid' %}
      </div>
    </div>
    <div id="modal-holder"></div>
    {% include './layouts/connection-issue-notice.liquid' %}
    {% include './layouts/tail.liquid' %}
