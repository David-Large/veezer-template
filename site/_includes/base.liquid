    {% include './layouts/navigation.liquid' %}
    {% include './layouts/screen-size-indicator.liquid' %}
    {% include './layouts/pagefind.liquid' %}
    {% include './layouts/page-loader.liquid' %}
    {% include './layouts/documentation-link' %}
    {% include './layouts/documentation-navigation.liquid' %}
    <div id="gsap-smooth-wrapper">
      <div id="gsap-smooth-content">
        {%- capture pagefind_ignore %}{%- if page.url == '/blog/' or page.url == '/events/' or page.url contains '/tags/' %} data-pagefind-ignore="all"{% endif %}{% endcapture %}
